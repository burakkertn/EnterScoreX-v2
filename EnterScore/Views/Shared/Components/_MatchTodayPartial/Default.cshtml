@using EntityLayer.Concrete;
@model EntityLayer.Concrete.Match

@{
    var players = TempData["Players"] as List<Player>;
}
<div class="match-today-section world-cup-match">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="world-cup-match-title gallery">
               
                    <h2 style="color:aliceblue; font-size:large;">@Model.Fixture.Week. Hafta </h2>
                    <h2 style="color:aliceblue; font-size:large;">@Model.Stadium.City</h2>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="match-left d-flex align-items-center">
                    <div class="today-team-img teamsname">
                        <a href="/TeamDetails/Index/@Model.HomeTeam.TeamID"><img src="@Model.HomeTeam.SignedUrl" style="width:50px;height:50px"></a>
                    </div>
                    <div class="today-team-name teamsname">
                        <a href="/TeamDetails/Index/@Model.HomeTeam.TeamID">
                            <h1>@Model.HomeTeam.Name</h1>
                        </a>
                        <p>@Model.HomeTeam.Coach.Name</p>
                        <br />

                        @if (Model.Goals != null)
                        {

                            @foreach (var item in Model.Goals)
                            {
                                var player = players.FirstOrDefault(p => p.PlayerID == item.PlayerID);
                                if (player.TeamID == Model.HomeTeam.TeamID)
                                {

                                    <span class="goal-time white-text bigger-text">@item.GoalTime'</span>
                                    <span class="player-name white-text bigger-text">@player.Name</span>
                                    <br />
                                }
                            }
                        }

                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="team-vs-team">
                    <h1>@Model.HomeTeamGoals-@Model.AwayTeamGoals</h1>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="match-right d-flex align-items-center">
                    <div class="today-team-name teamsname text-right">
                        <a href="/TeamDetails/Index/@Model.AwayTeam.TeamID">
                            <h1>@Model.AwayTeam.Name</h1>
                        </a>
                        <p>@Model.AwayTeam.Coach.Name</p>
                        <br />
                        @if (Model.Goals != null)
                        {

                            @foreach (var item in Model.Goals)
                            {
                                var player = players.FirstOrDefault(p => p.PlayerID == item.PlayerID);
                                if (player.TeamID == Model.AwayTeam.TeamID)
                                {
                                    <span class="goal-time white-text bigger-text">@item.GoalTime'</span>
                                    <span class="player-name white-text bigger-text">@player.Name</span>
                                    <br />
                                }
                            }
                        }
                    </div>
                    <div class="today-team-img teamsname">
                        <a href="/TeamDetails/Index/@Model.AwayTeam.TeamID"><img src="@Model.AwayTeam.SignedUrl" style="width:50px;height:50px"/></a>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- end of /. match today section -->
</div>